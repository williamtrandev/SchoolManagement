				// Duyệt từng hàng ở mỗi thứ
				selectedMon.each(function() {
					const assignmentId = $(this).val();
					if(assignmentId === null) flag = false;
					schedules.push({
						assignmentId,
						dayOfWeek: dayOfWeek,
						period,
					});
				});	
			});
			return flag;
		}
