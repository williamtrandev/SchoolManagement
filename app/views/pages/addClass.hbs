<script>
	$(function() {
		$("#grade").change(function() {
			let grade = $(this).val();
			fetch(`/teacher/classes/${grade}`)
			.then(res => res.json())
			.then(data => {
				$("#class").empty();
				data.forEach(item => {
					$("#class").append($('<option>', {
					value: item.value,
					text: item.value
					}));
				});
			})
			.catch(err => { console.log(err) });
		})
	})
</script>